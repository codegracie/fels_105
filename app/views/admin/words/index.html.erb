<section class="wrapper">
  <h3>
    <i class="fa fa-angle-right">
      <%= t ".title" %>
    </i>
  </h3>
  <div class="row mt">
    <div class="content-panel">
      <%= link_to new_admin_word_path, class: "btn btn-success btn-xs
        pull-right btn-panel" do %>
        <i class="fa fa-plus-circle">
          <%= t ".add" %>
        </i>
      <% end %>
      <table class="table table-striped table-advance table-hover">
        <h4>
          <i class="fa fa-angle-right">
            <%= t ".list" %>
          </i>
        </h4>
        <hr>
        <thead>
          <tr>
            <th>
              <i class="fa fa-text-height">
                <%= t ".content" %>
              </i>
            </th>
            <th>
              <i class="fa fa-text-height">
                <%= t ".content_category" %>
              </i>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @words.each do |word| %>
            <tr>
              <td>
                <%= word.content %>
              </td>
              <td>
                <%= word.category.name %>
              </td>
              <td>
                <div class="admin-actions">
                  <%= link_to admin_word_path(word), class: "button btn btn-success btn-xs" do %>
                    <i class="fa fa-file-text"></i>
                  <% end %>
                  <%= link_to edit_admin_word_path(word), class: "button btn btn-primary btn-xs" do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to admin_word_path(word), method: :delete,
                    data: {confirm: "You want to delete?"},class: "button btn btn-danger btn-xs" do %>
                    <i class="fa fa-trash-o"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @words %>
    </div>
  </div>
</section>
