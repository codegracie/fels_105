<div id="page-wrapper" >
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12">
        <br>
          <i class="btn btn-success btn-xs fa fa-download pull-right btn-panel">
            <%= link_to t(".download_csv"), request.parameters.merge(format: :csv) %>
          </i> 
            <%= link_to new_admin_user_path, class: "btn btn-success btn-xs pull-right btn-panel" do %>
              <i class="fa fa-plus-circle">
                <%= t ".add" %>
              </i>
            <% end %>
          <br>
        <br>
      </div>
    </div>
    <hr/>   
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2><%= t ".title" %></h2> 
          </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">  
            <thead>
              <tr>
                <th>
                  <i class="fa fa-square fa-lg"><br><br>
                  <%= t ".name" %>
                </th>
                <th>
                  <i class="fa fa-envelope-o fa-lg"><br><br>
                  <%= t ".email" %></i>
                </th>
                <th>
                  <i class="fa fa-check-square fa-lg"><br><br>
                  <%= t ".admin" %></i>
                </th>
                <th>
                  <i class="fa fa-wrench fa-lg"><br><br>
                  <%= t ".actions" %></i>
                </th>
              </tr>
            </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= user.full_name %>
                    </td>
                    <td>
                      <%= user.email %>
                    </td>
                    <td>
                      <%= user.admin? %>
                    </td>
                    <td>
                      <div class="admin-actions">
                        <%= link_to admin_user_path(user), class: "button btn btn-success btn-xs" do %>
                          <i class="fa fa-file-text"></i>
                        <% end %>
                        <%= link_to edit_admin_user_path(user), class: "button btn btn-primary btn-xs" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_user_path(user), method: :delete,
                          data: {confirm: "You want to delete?"},class: "button btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="text-center">
             <%= will_paginate @users %>
            </div>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>

